{
  "name": "my-single-site-tests",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:auth": "playwright test tests/admin.spec.ts tests/user.spec.ts",
    "show-report": "playwright show-report",
    "lint": "eslint . --ext .ts",
