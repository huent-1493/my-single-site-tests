    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^2.8.0",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm -s lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "pnpm -s run lint:fix",
      "pnpm -s run format"
    ]
  }
